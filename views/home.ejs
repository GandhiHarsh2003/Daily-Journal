<%- include("partials/header") %>
    <h1>Home</h1>

    <p><%= startingContent %></p>
    <% for(var i = 0; i < postsToSend.length; i++) { %>
        <% const words = postsToSend[i].title.split(" "); %>

        <% for (let i = 0; i < words.length; i++) { %>
            <%    words[i] = words[i][0].toUpperCase() + words[i].substr(1); %>
        <% } %>

        <% const printTitle = words.join(" "); %>
        <h1><%= printTitle%></h1>
        <p>
            <%= postsToSend[i].body.substring(0,300) %> ...
            <a href="/posts/<%= postsToSend[i].title %>">Read more</a>
        </p>
    <% } %>
<%- include("partials/footer") %>
